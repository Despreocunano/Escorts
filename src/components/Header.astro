<header class="fixed w-full z-[60] transition-colors duration-300" id="header">
  <!-- Top Bar -->
  <div class="bg-black/0 backdrop-blur-0 border-b border-white/10 transition-all duration-300" id="topBar">
    <div class="container mx-auto px-6">
      <div class="flex items-center justify-between h-10">
        <!-- Left Links -->
        <div class="flex items-center space-x-6">
          <a href="/foro" class="text-white/70 text-xs tracking-wider hover:text-white transition-colors">FORO</a>
          <a href="/blog" class="text-white/70 text-xs tracking-wider hover:text-white transition-colors">BLOG</a>
        </div>

        <!-- Right Links -->
        <div>
          <a href="/anunciate" class="bg-red-800 hover:bg-red-900 text-white text-xs tracking-wider px-6 py-1.5 rounded transition-colors">
            ANÃšNCIATE
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navigation -->
  <div class="bg-black/0 backdrop-blur-0 transition-all duration-300" id="mainNav">
    <div class="container mx-auto px-6">
      <nav class="flex items-center justify-between h-20">
        <!-- Logo -->
        <a href="/" class="text-white text-2xl tracking-[0.2em] font-light hover:text-gray-300 transition-colors">
          EL LIBRO ROJO
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-12">
          <a href="/" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">INICIO</a>
          <a href="/vip" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">VIP</a>
          <a href="/premium" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">PREMIUM</a>
          <a href="/gold" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">GOLD</a>
</div>

        <!-- Mobile Menu Button -->
        <button 
          id="menuButton"
          class="md:hidden text-white p-2 focus:outline-none"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </nav>

      <!-- Mobile Navigation -->
      <div 
        id="mobileMenu" 
        class="hidden md:hidden py-4"
      >
        <div class="flex flex-col space-y-4">
          <a href="/" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">INICIO</a>
          <a href="/vip" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">VIP</a>
          <a href="/premium" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">PREMIUM</a>
          <a href="/gold" class="text-white text-sm tracking-[0.2em] hover:text-gray-300 transition-colors">GOLD</a>
</div>
      </div>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('header');
  const topBar = document.getElementById('topBar');
  const mainNav = document.getElementById('mainNav');
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');

  // Handle mobile menu
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Handle header transparency and blur
  if (header && topBar && mainNav) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 0) {
        topBar.classList.remove('bg-black/0', 'backdrop-blur-0');
        topBar.classList.add('bg-black/80', 'backdrop-blur-lg');
        
        mainNav.classList.remove('bg-black/0', 'backdrop-blur-0');
        mainNav.classList.add('bg-black/80', 'backdrop-blur-lg');
      } else {
        topBar.classList.add('bg-black/0', 'backdrop-blur-0');
        topBar.classList.remove('bg-black/80', 'backdrop-blur-lg');
        
        mainNav.classList.add('bg-black/0', 'backdrop-blur-0');
        mainNav.classList.remove('bg-black/80', 'backdrop-blur-lg');
      }
    });
  }
</script>