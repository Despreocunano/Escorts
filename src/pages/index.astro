---
import Layout from '../layouts/Layout.astro';
import ModelList from '../components/ModelList';
---

<Layout title="Agencia de Modelos">
  <div class="h-screen relative flex items-center justify-center">
    <div class="absolute inset-0 bg-black">
      <video 
        class="w-full h-full object-cover opacity-50"
        autoplay 
        muted 
        loop 
        playsinline
        src="https://player.vimeo.com/progressive_redirect/playback/517090081/rendition/720p/file.mp4?loc=external"
      ></video>
    </div>
    <div class="relative text-center text-white z-10">
      <h1 class="text-5xl font-light tracking-widest mb-4">AGENCIA</h1>
      <p class="text-lg tracking-wider font-light">SANTIAGO DE CHILE</p>
    </div>
  </div>

  <section class="bg-black py-24 px-6">
    <div class="max-w-[1400px] mx-auto">
      <ModelList client:load />
    </div>
  </section>
</Layout>