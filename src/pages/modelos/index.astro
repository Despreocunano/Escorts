---
import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase';

const { data: models, error } = await supabase
  .from('models')
  .select('*')
  .order('name');

if (error) {
  console.error('Error fetching models:', error);
}
---

<Layout title="Nuestros Modelos">
  <div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-center mb-12">Nuestros Modelos</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {models?.map((model) => (
        <div class="group relative overflow-hidden rounded-lg shadow-lg transition-transform hover:scale-105">
          <img
            src={model.main_image}
            alt={model.name}
            class="h-[500px] w-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-2xl font-semibold text-white">{model.name}</h3>
              <div class="mt-2 text-sm text-gray-200">
                <p>Altura: {model.height}cm</p>
                <p>Medidas: {model.bust}-{model.waist}-{model.hips}</p>
              </div>
              <a
                href={`/modelos/${model.id}`}
                class="mt-4 inline-block rounded-full bg-white px-6 py-2 text-sm font-medium text-black transition-colors hover:bg-gray-100"
              >
                Ver Perfil
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>