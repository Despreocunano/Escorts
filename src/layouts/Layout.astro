---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400&display=swap" rel="stylesheet">
  </head>
  <body class="bg-black">
    <nav class="fixed w-full z-50">
      <div class="container mx-auto px-6 py-6">
        <div class="flex justify-between items-center">
          <a href="/" class="text-white text-xl tracking-widest font-light">AGENCIA</a>
          <div class="space-x-8 text-sm tracking-wider">
            <a href="/modelos" class="text-white hover:text-gray-300 transition-colors">MODELOS</a>
            <a href="/about" class="text-white hover:text-gray-300 transition-colors">NOSOTROS</a>
            <a href="/contact" class="text-white hover:text-gray-300 transition-colors">CONTACTO</a>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer class="py-8 px-6 text-xs text-center text-gray-500">
      <p>&copy; {new Date().getFullYear()} AGENCIA</p>
    </footer>
  </body>
</html>

<style is:global>
  body {
    font-family: 'Montserrat', sans-serif;
    font-weight: 300;
  }
</style>