---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white">
    <nav class="fixed w-full bg-white/80 backdrop-blur-sm z-50">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-semibold">Agencia</a>
          <div class="space-x-6">
            <a href="/modelos" class="hover:text-gray-600">Modelos</a>
            <a href="/about" class="hover:text-gray-600">Nosotros</a>
            <a href="/contact" class="hover:text-gray-600">Contacto</a>
          </div>
        </div>
      </div>
    </nav>
    <main class="pt-16">
      <slot />
    </main>
    <footer class="bg-primary text-white py-8 mt-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-semibold mb-4">Agencia</h3>
            <p class="text-gray-300">
              Agencia de modelos profesional con años de experiencia en la industria.
            </p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Contacto</h3>
            <p class="text-gray-300">Email: info@agencia.com</p>
            <p class="text-gray-300">Teléfono: +56 9 1234 5678</p>
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-4">Síguenos</h3>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-300 hover:text-white">Instagram</a>
              <a href="#" class="text-gray-300 hover:text-white">Facebook</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  body {
    font-family: 'Montserrat', sans-serif;
  }
</style>